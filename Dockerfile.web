FROM node:20-alpine AS base
WORKDIR /app

FROM base AS dev
COPY trexgym-web/package*.json ./
RUN npm ci
COPY trexgym-web/ ./
EXPOSE 5173
CMD ["sh", "-c", "npm run dev -- --host 0.0.0.0 --port ${WEB_PORT:-5173}"]

FROM base AS build
COPY trexgym-web/package*.json ./
RUN npm ci
COPY trexgym-web/ ./
RUN npm run build

FROM nginx:1.27-alpine AS prod
COPY --from=build /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
